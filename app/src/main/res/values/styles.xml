<resources>

    <style name="Mold" />

    <style name="Mold.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Mold.ToolbarTheme">
        <item name="android:actionBarItemBackground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Mold.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
